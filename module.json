{
    "dependencies": [],
    "singleton": true,
    "category": "device_enhancements",
    "author": "Maroš Kollár",
    "homepage": "http://k-1.com",
    "icon": "icon.png",
    "moduleName": "DeviceMove",
    "version": "1.0.0",
    "maturity": "stable",
    "repository": {
        "type": "git",
        "source": "https://github.com/maros/Zway-DeviceMove"
    },
    "defaults": {
        "title": "__title__",
        "description": "__description__",
        "icon": "default"
    },
    "schema": {
        "type": "object",
        "properties": {
            "devices": {
                "required": true,
                "type": "array",
                "items": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "device": {
                            "field": "enum",
                            "datasource": "namespaces",
                            "enum": "namespaces:devices_switchMultilevel:deviceName",
                            "required": true
                        },
                        "time": {
                            "type": "number",
                            "required": true
                        }
                    }
                }
            },
            "icon": {
                "type": "select",
                "enum": ["default","blind", "window","dimmer"],
                "required": true
            },
            "report": {
                "type": "select",
                "enum": ["open", "close", "none"],
                "required": true
            },
                "required": true
            }
        },
        "required": true
    },
    "options": {
        "fields": {
            "devices": {
                "label": "__devices_label__",
                "fields": {
                    "item": {
                        "fields": {
                            "device": {
                                "type": "select",
                                "datasource": "namespaces",
                                "field": "optionLabels",
                                "optionLabels": "namespaces:devices_switchMultilevel:deviceName"
                            },
                            "time": {
                                "label": "__time_label__",
                                "helper": "__time_helper__"
                            }
                        }
                    }
                }
            },
            "icon": {
                "label": "__icon_label__",
                "helper": "__icon_helper__",
                "optionLabels": ["__icon_default__","__icon_blind__","__icon_window__","__icon_dimmer__"]
            },
            "report": {
                "label": "__report_label__",
                "helper": "__report_helper__",
                "optionLabels": ["__report_label_open__","__report_label_close__","__report_label_both__","__report_label_none__"]
            }
        }
    }
}
